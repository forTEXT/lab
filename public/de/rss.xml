            <item>
                <title>Plans</title>
                <link>https://example.com/de/projekte/forschungsprojekte/plans/</link>
                <guid isPermaLink="true">https://example.com/de/projekte/forschungsprojekte/plans/</guid>
                <pubDate>Mon, 01 Jan 0001 00:00:00 &#43;0000</pubDate>
                
